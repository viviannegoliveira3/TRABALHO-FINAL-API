{
  "openapi": "3.0.0",
  "info": {
    "title": "API Checkout",
    "version": "1.0.0",
    "description": "API para registro de usuários, login, listagem de produtos e checkout com boleto"
  },
  "paths": {
    "/api/users/register": {
      "post": {
        "summary": "Registrar novo usuário",
        "requestBody":{
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["name","email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Usuário registrado" },
          "400": { "description": "Usuário já existe" }
        }
    },
    "/api/users/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Token JWT retornado" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
      }
    },
    "/api/products": {
      "get": {
        "summary": "Listar produtos",
        "operationId": "listProducts",
        "responses": {
          "200": {
            "description": "Lista de produtos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "name": { "type": "string" },
                      "price": { "type": "number" },
                      "stock": { "type": "integer" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Adicionar produto (exemplo)",
        "operationId": "addProduct",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "number" },
                  "stock": { "type": "integer" }
                },
                "required": ["name", "price", "stock"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Produto adicionado" }
        }
      }
    },
    "/api/checkout": {
      "post": {
        "summary": "Realizar checkout",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "productId": { "type": "integer" },
                        "quantity": { "type": "integer" }
                      }
                    }
                  },
                  "payment": {
                    "type": "object",
                    "properties": {
                      "method": { "type": "string", "enum": ["boleto", "cartao"] },
                      "card": {
                        "type": "object",
                        "properties": {
                          "number": { "type": "string" },
                          "name": { "type": "string" },
                          "expiry": { "type": "string" },
                          "cvv": { "type": "string" }
                        }
                      }
                    }
                  }
                },
                "required": ["items", "payment"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Checkout realizado com sucesso" },
          "400": { "description": "Erro no checkout" },
          "401": { "description": "Token inválido" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}

